<main>
    <div class="navbar_promos">
        <p>Aprovecha un 10% de descuento en efectivo en todos nuestros productos</p>
    </div>
    <section class="section_home">
        <div class="contrainer_title_home">
            <h1>Bienvenido a nuestro petshop.</span></h1>
        </div>
        <div class="container_homeProducts">
            {{#each products}}
            {{#if this.status}}
            <div class="productCard">
                {{#if this.stock}}
                <span class="productCard_inStock">EN STOCK</span>
                {{else}}
                <span class="productCard_outOfStock">AGOTADO</span>
                {{/if}}
                <h3>{{this.title}}</h3>
                <img class="productCard_img" src="../assets/images/store/{{this.thumbnail}}" alt={{this.title}}></img>
                <div class="productCard_info">
                    <div class="productCard_info_text">
                        <h4>Desde ${{this.price}}</h4>
                    </div>
                    <button class="productCard_info_button" id={{this.id}}>Comprar</button>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </section>
</main>
